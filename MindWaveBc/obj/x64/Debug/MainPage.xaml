<Page
    x:Class="MindWaveBc.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MindWaveBc"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="100" Margin="-203,-2197,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:ConnectionId='1' x:Name="ConnectBtn" Content="STEP1: Connect to headset " HorizontalAlignment="Left" Margin="38,10,0,0" VerticalAlignment="Top" Height="122" Width="290"                     />
        <Button x:ConnectionId='2' x:Name="DataBtn" Content="STEP2: Read EEG Data" HorizontalAlignment="Left" Margin="38,192,0,0" VerticalAlignment="Top" Height="69" Width="290"                      />
        <ListView x:ConnectionId='3' x:Name="EEGlist" HorizontalAlignment="Left" Height="350" Margin="183,266,-1383,0" VerticalAlignment="Top" Width="1560"/>
        <TextBlock x:ConnectionId='4' x:Name="textBlock" HorizontalAlignment="Left" Margin="46,137,0,0" TextWrapping="Wrap" Text="(HEADSET MUST BE PAIRED IN SYSTEM BLUETOOTH MENU !!)" VerticalAlignment="Top" Height="50" Width="282"/>
        <Button x:ConnectionId='5' x:Name="button" Content="Start" HorizontalAlignment="Left" Height="48" Margin="22,281,0,0" VerticalAlignment="Top" Width="68"                       />
        <Button x:ConnectionId='6' x:Name="button1" Content="Pause" Height="48" Width="99" Margin="95,281,0,311" RenderTransformOrigin="0.988,0.891"                        />
        <Button x:ConnectionId='7' x:Name="button2" Content="XML" HorizontalAlignment="Left" Height="41" Margin="22,334,0,0" VerticalAlignment="Top" Width="68"                      />
        <Button x:ConnectionId='8' x:Name="button3" Content="Stop/Clear" HorizontalAlignment="Left" Height="41" Margin="95,334,0,0" VerticalAlignment="Top" Width="99"                      />
    </Grid>
</Page>

